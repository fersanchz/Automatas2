package arboles;
import java.io.*;
public class Arbol {
	public static Nodo raiz=null;
	public static int cuenta=0, total=0;


	public static boolean InsertaABB(int clave,  Nodo nodo)
	{
		if (clave<nodo.claveart)
		{
			if (nodo.LI==null)
			{
				Nodo nuevo=new Nodo(clave);
				nodo.LI=nuevo;
				System.out.println("Se inserto "+clave);
				return true;
			}
			else
			{
				InsertaABB(clave,  nodo.LI);
			}
		}
		else
		{
			if (clave>nodo.claveart)
			{
				if (nodo.LD==null)
				{
					Nodo nuevo=new Nodo(clave);
					nodo.LD=nuevo;
					System.out.println("Se inserto "+clave);
					return true;		
				}
				else
				{
					InsertaABB(clave, nodo.LD);
				}
			}
			
			
		}
		return false;
	}
	public static void inorden(Nodo nodo)
	{ 
		if (nodo!=null)
		{
			inorden(nodo.LI);
		
			System.out.println(nodo.claveart);
			
			inorden(nodo.LD);
		    cuenta++;	
		}
	
	}
	public static void preorden(Nodo nodo)
	{
		if (nodo!=null)
		{
			System.out.println(nodo.claveart);
			preorden(nodo.LI);
			preorden(nodo.LD);
			
		}
	}
	public static void postorden(Nodo nodo)
	{
		if (nodo!=null)
		{
			postorden(nodo.LI);
			postorden(nodo.LD);
			System.out.println(nodo.claveart);
		}
	}
	public static void suma(Nodo nodo)
	{
		if (nodo!=null)
		{
			
			suma(nodo.LI);
			total=total+nodo.claveart;
			suma(nodo.LD);
			total=total+nodo.claveart;
			
		}
	}
	public static boolean Busca(int dato, Nodo nodo)
	{
		if (nodo!=null)	
		{
			if (nodo.claveart==dato)
			{
				return true;
			}
			else
			{
				if (dato>nodo.claveart)
				{
					Busca(dato,nodo.LD);
				}
				else
					if (dato<nodo.claveart)
					{
						Busca(dato,nodo.LI);  
					}
			}
		}
		
		return false;
		
	}
	public static void main(String[] args) {
		raiz=new Nodo(45);
		InsertaABB(23,raiz);
		InsertaABB(2,raiz);
		InsertaABB(7,raiz);
		InsertaABB(38,raiz);
		InsertaABB(65,raiz);
		InsertaABB(52,raiz);
		InsertaABB(48,raiz);
		InsertaABB(96,raiz);
		inorden(raiz);
		preorden(raiz);
		postorden(raiz);
	}

}
